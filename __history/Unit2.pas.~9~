unit Unit2;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TFormAdd = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    Edit3: TEdit;
    Button2: TButton;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormAdd: TFormAdd;

implementation

uses Unit3;

{$R *.dfm}

procedure TFormAdd.Button1Click(Sender: TObject);
 var
f:TStrings;
g:TStrings;
I:integer;
flag:boolean;
begin
 f:=TStringList.Create();
 g:=TStringList.Create();
 f.LoadFromFile('h:\Защита Информации\Новая Папка\users.txt');
 g.LoadFromFile('h:\Защита Информации\Новая Папка\parols.txt');
 if FormAdd.Edit2.Text=FormAdd.Edit3.Text then
  begin
   flag:=false;
   for I := 0 to f.Count - 1 do
     if FormAdd.Edit1.Text=f.Strings[I] then
          flag:=true;
        if flag=false then
           begin
             f.Add(FormAdd.Edit1.Text);
             f.SaveToFile('h:\Защита Информации\Новая Папка\users.txt');
             g.Add(FormAdd.Edit2.Text);
             g.SaveToFile('h:\Защита Информации\Новая Папка\parols.txt');
           end
        else ShowMessage('Takoi polzovatel est');

  end;
f.Free;
g.Free;
end;

procedure TFormAdd.Button2Click(Sender: TObject);
begin
FormAdd.Close;
end;

end.
