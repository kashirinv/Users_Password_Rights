unit Unit3;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TFormUser = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Memo1: TMemo;
    Button4: TButton;
    Button5: TButton;
    Edit1: TEdit;
    procedure Button5Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure FormActivate(Sender: TObject);
    procedure Button3Click(Sender: TObject);


    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormUser: TFormUser;

implementation

uses Unit1, Unit5;

{$R *.dfm}

procedure TFormUser.Button1Click(Sender: TObject);
begin
FormPas.ShowModal;
end;

procedure TFormUser.Button2Click(Sender: TObject);
begin
FormReg.Edit1.Enabled:=true;
FormUser.Close;
end;



procedure TFormUser.Button3Click(Sender: TObject);
begin
 Memo1.Clear;
 Memo1.Enabled:=True;
 Edit1.Clear;
end;
procedure TFormUser.Button4Click(Sender: TObject);
var
r:byte;
begin
{Тут надо проверить права}
 case r of
 1: begin
     Memo1.lines.LoadFromFile(Edit1.Text+'\text.txt');
     Edit1.Enabled:=false;
    end;
 2: begin
     Memo1.lines.LoadFromFile(Edit1.Text+'\text.txt');
     Edit1.Enabled:=false;
     Memo1.Enabled:=false;
    end;
 3: Memo1.Text:='У вас нет прав для просмотра этого файла';
 end;
end;

procedure TFormUser.Button5Click(Sender: TObject);
var
r:byte;
begin
{И тут тоже}
 case r of
 1:begin
    Memo1.Lines.SaveToFile(Edit1.Text+'\text.txt');
    ShowMessage('File Saved');
   end;
 else ShowMessage('У вас нет прав');
 end;

end;

procedure TFormUser.FormActivate(Sender: TObject);
begin
FormReg.Edit1.Enabled:=false;
end;

procedure TFormUser.FormCreate(Sender: TObject);
begin
Memo1.Text:='';
end;

end.
